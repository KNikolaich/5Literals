{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "build release",
			"type": "shell",
			"command": "dotnet",
			"args": [
				"build",
				"-c",
				"Release"
			],
			"problemMatcher": [
				"$msCompile"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"presentation": {
				"reveal": "always",
				"panel": "shared",
				"clear": false
			}
		},
		{
			"label": "build debug",
			"type": "shell",
			"command": "dotnet",
			"args": [
				"build",
				"--no-restore",	
				"-c",
				"Debug"
			],
			"problemMatcher": [
				"$msCompile"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"presentation": {
				"reveal": "always",
				"panel": "shared",
				"clear": false
			}
		},
		{
			"label": "test",
			"type": "shell",
			"command": "dotnet",
			"args": [
				"test",
				"..\\WordChainsGenerator.Tests\\WordChainsGenerator.Tests.csproj",
				"-c",
				"Release"
			],
			"problemMatcher": [
				"$msCompile"
			],
			"group": "test",
			"presentation": {
				"reveal": "always",
				"panel": "shared",
				"clear": false
			}
		},
		{
			"label": "run",
			"type": "shell",
			"command": "dotnet",
			"args": [
				"run",
				"--project",
				".\\WordChainsGenerator\\WordChainsGenerator.csproj",
				"-c",
				"Debug",
				"--",
				".\\WordChainsGenerator\\words.txt",
				"50"
			],
			"group": "test",
			"presentation": {
				"reveal": "always",
				"panel": "shared",
				"clear": false
			},
			"dependsOn": ["build"]
		}
	]
}
